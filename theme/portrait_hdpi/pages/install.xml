					<condition var1="tw_has_injecttwrp" var2="1"/>
					<data variable="tw_inject_after_zip"/>
				</listitem>
			</listbox>

			<button style="btn_raised">
				<condition var1="fileexists" var2="/sdcard/Fox/FoxFiles/Magisk.zip"/>
